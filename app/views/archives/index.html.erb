<p id="notice"><%= notice %></p>

<h1>Listing Archives</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Audio</th>
      <th>Date dif</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Animateur</th>
      <th>Guest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.title %></td>
        <td><audio src="<%= archive.audio.url %>" controls></audio></td>
        <td><%= archive.date_dif %></td>
        <td><%= archive.description %></td>
        <td><%= archive.duration %></td>
        <td><%= archive.animateur %></td>
        <td><%= archive.guest %></td>
        <td><%= link_to 'Show', archive %></td>
        <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

