<p id="notice"><%= notice %></p>

<h1>Listing Actualites</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Sous titre</th>
      <th>Contenu</th>
      <th>Lieu</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actualites.each do |actualite| %>
      <tr>
        <td><%= actualite.titre %></td>
        <td><%= actualite.sous_titre %></td>
        <td><%= actualite.contenu %></td>
        <td><%= actualite.lieu %></td>
        <td><%= actualite.date %></td>
        <td><%= link_to 'Show', actualite %></td>
        <td><%= link_to 'Edit', edit_actualite_path(actualite) %></td>
        <td><%= link_to 'Destroy', actualite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

